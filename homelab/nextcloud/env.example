# Variables de entorno para Nextcloud Docker Compose
# Copia este archivo a .env y edita los valores

# Base de datos MariaDB
MYSQL_ROOT_PASSWORD=change_me_root_password_secure
MYSQL_PASSWORD=change_me_nextcloud_password_secure

# Redis
REDIS_PASSWORD=change_me_redis_password_secure

# Nextcloud
NEXTCLOUD_DOMAIN=nextcloud.tudominio.com
NEXTCLOUD_IP=192.168.1.100

# OnlyOffice (opcional - solo si usas docker-compose.onlyoffice.yml)
ONLYOFFICE_JWT_SECRET=change_me_jwt_secret_32_chars_min

# Collabora (opcional - solo si usas docker-compose.collabora.yml)
COLLABORA_PASSWORD=change_me_collabora_password_secure

# Backup (opcional - para backup.sh)
BACKUP_DIR=/backups/nextcloud
NEXTCLOUD_CONTAINER=nextcloud-app
DB_CONTAINER=nextcloud-db
DB_USER=nextcloud
DB_NAME=nextcloud
RETENTION_DAYS=30

