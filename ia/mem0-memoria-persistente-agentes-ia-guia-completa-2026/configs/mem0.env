# Configuración de Mem0
# Copia este archivo a .env y ajusta los valores según tu entorno

# Vector Database (Qdrant)
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION_NAME=mem0_memories
QDRANT_API_KEY=

# Embedding Model (Ollama Local)
OLLAMA_URL=http://localhost:11434
EMBEDDING_MODEL=nomic-embed-text

# Alternativa: OpenAI (requiere API key)
# EMBEDDING_PROVIDER=openai
# OPENAI_API_KEY=sk-...
# EMBEDDING_MODEL=text-embedding-3-small

# LLM para el agente (Ollama)
LLM_MODEL=llama3
LLM_BASE_URL=http://localhost:11434

# Configuración de Memoria
MAX_MEMORIES=1000
CLEANUP_INTERVAL=3600
COMPRESSION_THRESHOLD=100

# Logging
LOG_LEVEL=INFO
VERBOSE=true

